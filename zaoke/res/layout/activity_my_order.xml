<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_0004_bg"
    tools:context=".MyOrderActivity" >
    
    
   <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
         >
    </android.support.v4.view.ViewPager>

    <ImageView
        android:id="@+id/my_order_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back_btn_selector" />

    <TextView
        android:id="@+id/my_order_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/my_order_back"
        android:background="@drawable/common_back_btn_selector"
        android:gravity="center"
        android:textSize="@dimen/text_middle"
        android:text="@string/my_order_cancel"
        android:textColor="@color/my_order_white" />

</RelativeLayout>