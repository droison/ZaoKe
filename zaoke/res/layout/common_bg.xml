<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/_0004_bg"
    tools:context=".QxActivity" >

    <TextView
        android:id="@+id/common_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:id="@id/common_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/common_bottom"
        android:layout_marginBottom="40dp" >

        <ImageView
            android:id="@+id/common_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28dp"
            android:src="@drawable/back_btn_selector" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/common_back"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/common_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/main_text"
                android:textSize="@dimen/text_middle"
                android:background="@drawable/confirm_selector" />

            <TextView
                android:id="@+id/common_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/main_text"
                android:textSize="@dimen/text_middle"
                android:visibility="gone"
                android:background="@drawable/common_back_btn_selector"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>